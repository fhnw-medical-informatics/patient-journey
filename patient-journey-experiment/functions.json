[
  {
    "name": "sort",
    "description": "Sort the data by a given field",
    "parameters": {
      "type": "object",
      "properties": {
        "field": {
          "type": "string",
          "description": "The field to sort by"
        },
        "order": {
          "type": "string",
          "description": "The order to sort by",
          "enum": ["asc", "desc"]
        }
      },
      "required": ["field"]
    }
  },
  {
    "name": "filter",
    "description": "Filter the data by a given field and value",
    "parameters": {
      "type": "object",
      "properties": {
        "field": {
          "type": "string",
          "description": "The field to filter by"
        },
        "value": {
          "type": "string",
          "description": "The value to filter by"
        }
      },
      "required": ["field", "value"]
    }
  }
]
